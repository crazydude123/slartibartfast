<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <TextView
        android:text="@string/wanna_earn_money_by_answering_a_few_questions_click_to_register"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:textColor="#ff7cb342"
        android:textAlignment="center"
        android:scaleX="1"
        android:scaleY="1"
        android:layout_margin="30dp" />

    <Button
        android:id="@+id/Reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:background="@color/colourWhite"
        android:onClick="clickRegister"
        android:text="@string/next"
        android:textColor="#ff263238"
        android:textSize="70dp" />

    <Button
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="#fffffbfb"
        android:onClick="clickLogin"
        android:text="@string/already_registered_click_to_login"
        android:textColor="#ff03a9f4" />

</LinearLayout>